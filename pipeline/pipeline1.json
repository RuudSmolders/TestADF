{
	"name": "pipeline1",
	"properties": {
		"activities": [
			{
				"name": "GetSubFolders",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "DS_CSVAll",
						"type": "DatasetReference"
					},
					"fieldList": [
						"childItems",
						"itemName"
					],
					"storeSettings": {
						"type": "AzureBlobStorageReadSettings",
						"recursive": true
					},
					"formatSettings": {
						"type": "DelimitedTextReadSettings"
					}
				}
			},
			{
				"name": "Loop_Folders",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "GetSubFolders",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('GetSubFolders').output.childItems",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "set SubFolder for FileList",
							"type": "SetVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "SubFolder",
								"value": "@item().name"
							}
						},
						{
							"name": "GetFileList",
							"type": "GetMetadata",
							"dependsOn": [
								{
									"activity": "set SubFolder for FileList",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"dataset": {
									"referenceName": "DS_CSVSubFolder",
									"type": "DatasetReference",
									"parameters": {
										"Input_SubFolderName": {
											"value": "@variables('SubFolder')",
											"type": "Expression"
										}
									}
								},
								"fieldList": [
									"itemName",
									"childItems",
									"itemType"
								],
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							}
						},
						{
							"name": "DataLakeAnalyticsU-SQL1",
							"type": "DataLakeAnalyticsU-SQL",
							"dependsOn": [
								{
									"activity": "GetFileList",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"scriptPath": "2016/sales.usql",
								"scriptLinkedService": {
									"referenceName": "AzureDataLakeStore1",
									"type": "LinkedServiceReference"
								},
								"parameters": {
									"sales_file": {
										"value": "@concat(activity('GetSubFolders').output.itemName\n,'/{*}.txt')",
										"type": "Expression"
									},
									"lineitems_file": {
										"value": "@concat('2016/output/lineitems/{*}_output.txt')",
										"type": "Expression"
									},
									"orders_file": "@concat('2016/output/sales/output.txt')"
								}
							},
							"linkedServiceName": {
								"referenceName": "AzureDataLakeAnalytics1",
								"type": "LinkedServiceReference"
							}
						}
					]
				}
			}
		],
		"variables": {
			"SubFolder": {
				"type": "String"
			}
		},
		"annotations": []
	}
}